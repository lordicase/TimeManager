<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">#F23B5F</item>
        <item name="colorPrimaryVariant">#F23B5F</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="PopupMenu" parent="Theme.TimeManager">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">

        <item name="colorButtonNormal">#F23B5F</item>
        <item name="android:colorButtonNormal">#F23B5F</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.TimeManagerActionbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">#F23B5F</item>
        <item name="colorPrimaryVariant">#F23B5F</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

</resources>